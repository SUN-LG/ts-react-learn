{
  "extends": "tslint-config-alloy",
  "rules": {
      // 必须使用 === 或 !==，禁止使用 == 或 !=，与 null 比较时除外
      "triple-equals": [
          true,
          "allow-null-check"
      ],
      "indent": [
          true,
          "spaces",
          2
      ]
  },
  "linterOptions": {
      "exclude": [
          "**/node_modules/**"
      ]
  }
}